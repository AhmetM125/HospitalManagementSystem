@*@model IEnumerable<EntityLayer.Entities.User>*@
@model List<EntityLayer.Entities.User>
@{
    ViewBag.Title = "ListOfUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="margin-left:15px" class="navbar-brand">Users</h2>
<br />
<a href="#" style="margin:15px 0px 0px 15px" class="btn btn-outline-info">New User</a>
<table class="table table-bordered" style="margin:15px 0px 0px 15px">

    <tr style="text-align:center">

        <th>
            @Html.DisplayName("Name")
        </th>
        <th>
            @Html.DisplayName("Surname")
        </th>

        <th>
            @Html.DisplayName("Phone Number")
        </th>
        <th>
            @Html.DisplayName("Mail")
        </th>
        <th>
            @Html.DisplayName("Department Name")
        </th>
        <th>
           Active Status
        </th>
        <th>
            Role
        </th>
       
    </tr>

    @foreach (var item in Model)
    {
        <tr style="text-align:center">
            <td>
                @Html.DisplayFor(modelItem => item.User_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User_Surname)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.UserPhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserMail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.DepartmentName)
            </td>
            <td>
                <span class="badge badge-success ">Active</span>
            </td>
            <td>
                <span class="badge badge-info">Role</span> 
            </td>
            <td>
                <a href="#" class="btn btn-outline-warning">Edit</a>
            </td>
            <td>
                <a href="#" class="btn btn-outline-success">Details</a>
            </td>
            <td>
                <a href="#" class="btn btn-outline-info">Delete</a>

            </td>
        </tr>
    }

</table>
